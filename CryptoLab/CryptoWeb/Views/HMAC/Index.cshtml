@{
  ViewData["Title"] = "HMAC";
}

<h2>HMAC</h2>

<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Generate" method="post">
      <div class="form-group">
        <label class="control-label">Payload</label>
        <input name="payload" class="form-control" />
      </div>
      <div class="form-group">
        <input type="submit" value="Generate" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>
<br />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Verify" method="post">
      <div class="form-group">
        <label class="control-label">Payload</label>
        <input name="payload" class="form-control" />
      </div>
      <div class="form-group">
        <label class="control-label">HMAC</label>
        <input name="hmac" class="form-control" />
      </div>
      <div class="form-group">
        <input type="submit" value="Verify" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>


